<schemalist gettext-domain="devtoolbox">
	<schema id="me.iepure.devtoolbox" path="/me/iepure/devtoolbox/">

	  	<!-- Window state -->
	  	<key name="window-width" type="i">
			<default>1200</default>
		</key>
		<key name="window-height" type="i">
			<default>850</default>
		</key>
		<key name="window-maximized" type="b">
			<default>false</default>
		</key>
		<key name="last-tool" type="s">
			<default>"json-yaml"</default>
		</key>
		<key name="sidebar-open" type="b">
			<default>true</default>
		</key>

		<!-- Favorites -->
		<key name="favorites" type="as">
			<default>[]</default>
		</key>

		<!-- Settings -->
		<key name="style-scheme" type="s">
			<default>"auto"</default>
		</key>

		<!-- Color Converter -->
		<key name="color-converter-format" type="s">
			<default>"web"</default>
		</key>
		<key name="color-converter-bits" type="i">
			<default>8</default>
		</key>
		<key name="color-converter-angle" type="s">
			<default>"deg"</default>
		</key>

	</schema>
</schemalist>
